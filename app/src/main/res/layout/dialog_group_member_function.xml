<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_200"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_26"
    android:paddingRight="@dimen/dp_26">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_gravity="end"
        android:background="@drawable/light_gray_rip_out"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@drawable/icon_close"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/light_gray_white_rip"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/exit_group_str"
        android:visibility="gone"
        android:textColor="@color/colorMineThemeText"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/light_gray_white_rip"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/delete_member_str"
        android:textColor="@color/colorMineThemeText"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/colorMineThemeText"/>

    <TextView
        android:id="@+id/set_keeper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/light_gray_white_rip"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/set_keeper_str"
        android:textColor="@color/colorMineThemeText"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/remove_keeper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/light_gray_white_rip"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/remove_keeper_str"
        android:textColor="@color/colorMineThemeText"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/colorMineThemeText"/>

    <TextView
        android:id="@+id/banned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_white_rip"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/banned_member_str"
        android:textColor="@color/colorMineThemeText"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/cancel_banned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_white_rip"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/cancel_banned_str"
        android:textColor="@color/colorMineThemeText"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"/>

</LinearLayout>