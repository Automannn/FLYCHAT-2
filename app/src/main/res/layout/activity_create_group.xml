<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".createGroup.CreateGroupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back_create_group"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_49"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_3"
            android:background="@drawable/light_gray_rip_out"
            android:paddingStart="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/left_arrow"
            tools:ignore="ContentDescription,RtlSymmetry"/>

        <TextView
            android:id="@+id/title_create_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_toEndOf="@id/back_create_group"
            android:layout_toRightOf="@id/back_create_group"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:id="@+id/done_create_group"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@drawable/light_gray_rip_out"
            android:text="@string/next_str"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16"
            tools:ignore="RelativeOverlap"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>