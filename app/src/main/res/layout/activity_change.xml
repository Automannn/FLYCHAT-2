<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMineBack"
    android:orientation="vertical"
    tools:context=".payPackage.ChangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueDeep"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_74"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/light_gray_rip_out"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/left_arrow"
                tools:ignore="ContentDescription"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/change_str"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap"/>

            <ImageView
                android:id="@+id/more"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/light_gray_rip_out"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/more"
                tools:ignore="ContentDescription"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:text="@string/my_change_str"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/my_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="@string/money_count_str"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_40"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/light_gray_white_rip"
            android:gravity="center"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/recharge_str"
            android:textColor="@color/colorBlueDeep"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@color/colorLightGray"/>

        <TextView
            android:id="@+id/cash_withdrawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/light_gray_white_rip"
            android:gravity="center"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/cash_withdrawal_str"
            android:textColor="@color/colorBlueDeep"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/my_bank_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/light_gray_white_rip"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <ImageView
            android:id="@+id/icon_bank_card"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/loose_change"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon_bank_card"
            android:layout_toRightOf="@id/icon_bank_card"
            android:text="@string/my_bank_card_str"
            android:textColor="@color/colorMineThemeText"
            tools:ignore="RelativeOverlap"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_4"
            android:src="@drawable/icon_right_arrow"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@color/colorLightGray"/>

    <RelativeLayout
        android:id="@+id/my_red_record_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_white_rip"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <ImageView
            android:id="@+id/icon_red_packet"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/icon_red_package"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon_red_packet"
            android:layout_toRightOf="@id/icon_red_packet"
            android:text="@string/my_red_packet_record_str"
            android:textColor="@color/colorMineThemeText"
            tools:ignore="RelativeOverlap"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_4"
            android:src="@drawable/icon_right_arrow"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>

</LinearLayout>