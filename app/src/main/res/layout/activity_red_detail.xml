<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RedDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="@color/colorRedDeep"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_5">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/light_gray_rip_out"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/left_arrow"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:gravity="center"
            android:text="@string/red_detail_str"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_21"/>

    </LinearLayout>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMineThemeText"
        android:textSize="@dimen/sp_40"
        android:text="saasdasd"
        android:layout_centerInParent="true"/>

</RelativeLayout>