<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notify_layout_big"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/light_gray_white_rip"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_notify_big"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:contentDescription="@drawable/icon_user"
                android:src="@drawable/icon_user"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_notify_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_data"
                    android:textColor="@color/colorMineThemeText"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/invite_content_notify_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:text="@string/test2_str"
                    android:textColor="@color/colorMineThemeText"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/notify_big"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/light_gray_rip_out"
            android:contentDescription="@string/arrow_up_str"
            android:src="@drawable/icon_arrow_up"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/accept_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/light_gray_rip_out"
            android:text="@string/accept_str"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/refused_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_gray_rip_out"
            android:text="@string/refused_str"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

</LinearLayout>