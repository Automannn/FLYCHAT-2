<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_gray_bg">

    <RelativeLayout
        android:id="@+id/talk_ground_layout"
        android:layout_width="?widthE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/light_gray_dark_underline_rip"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="?widthJ"
            android:layout_height="?heightM"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/talk_ground"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/talk_ground_text"
            android:textColor="@color/colorWhite"
            android:textSize="?smallFont"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_friends_layout"
        android:layout_width="?widthE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/light_gray_dark_underline_rip"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/talk_ground_layout">

        <ImageView
            android:layout_width="?widthJ"
            android:layout_height="?heightM"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/add_people"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_friends_text"
            android:textColor="@color/colorWhite"
            android:textSize="?smallFont"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SQ_layout"
        android:layout_width="?widthE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/light_gray_dark_underline_rip"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/add_friends_layout">

        <ImageView
            android:layout_width="?widthJ"
            android:layout_height="?heightM"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/sq"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/SQ_text"
            android:textColor="@color/colorWhite"
            android:textSize="?smallFont"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/help_back_up_layout"
        android:layout_width="?widthE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/light_gray_dark_underline_rip"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/SQ_layout">

        <ImageView
            android:layout_width="?widthJ"
            android:layout_height="?heightM"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/help_back_up"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/help_back_up_text"
            android:textColor="@color/colorWhite"
            android:textSize="?smallFont"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>