<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_create_group"
        android:layout_width="match_parent"
        android:layout_height="?heightF"
        app:searchHintIcon="@null"
        app:searchIcon="@null"
        android:background="@color/colorWhite"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contact_recycler_create_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_animation_fall_down"/>

        <com.gjiazhe.wavesidebar.WaveSideBar
            android:id="@+id/glide_side_bar_create_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:sidebar_text_color="@color/colorDarkGray"
            app:sidebar_text_size="12sp"/>
    </RelativeLayout>

</LinearLayout>