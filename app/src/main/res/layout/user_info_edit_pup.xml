<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg"
    app:layout_constraintCircleRadius="20dp">

    <android.support.constraint.Guideline
        android:id="@+id/btn_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <EditText
        android:id="@+id/user_info_edit"
        android:layout_width="?widthK"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/user_info_edit_pup_bg"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        android:textColor="@color/login_edit_text_selector_color"
        android:textCursorDrawable="@drawable/cursor_dra"
        android:textSize="?smallFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,LabelFor,TextFields"/>

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="?widthL"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/dark_gray_light_blue_rip"
        android:text="@string/cancel_str"
        android:textColor="@color/colorWhite"
        android:textSize="?smallFont"
        app:layout_constraintEnd_toStartOf="@id/btn_line"
        app:layout_constraintTop_toBottomOf="@id/user_info_edit"/>

    <Button
        android:id="@+id/sure_btn"
        android:layout_width="?widthL"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/dark_gray_light_blue_rip"
        android:text="@string/sure_str"
        android:textColor="@color/colorWhite"
        android:textSize="?smallFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_line"
        app:layout_constraintTop_toBottomOf="@id/user_info_edit"/>

</android.support.constraint.ConstraintLayout>