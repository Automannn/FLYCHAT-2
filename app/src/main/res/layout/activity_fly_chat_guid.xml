<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_guid"
    tools:context=".activity.FlyChatGuidActivity">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        android:layout_margin="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.rey.material.widget.Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/app_guid_btn_bg"
        android:text="@string/login_now_str"
        android:textColor="@color/color_app_guid_text"
        android:textSize="?largeFont"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:rd_enable="true"/>

    <com.rey.material.widget.Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/app_guid_btn_bg"
        android:text="@string/quick_sign_str"
        android:textColor="@color/color_app_guid_text"
        android:textSize="?largeFont"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:rd_enable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>