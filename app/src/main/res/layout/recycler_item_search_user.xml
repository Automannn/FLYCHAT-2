<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/icon"
        android:layout_width="?widthI"
        android:layout_height="?heightL"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/icon_user"
        app:siBorderAlpha="0"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:text="@string/title_dashboard"
        android:textColor="@color/colorMineThemeText"
        android:textSize="?smallFont"/>

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/dark_gray_light_blue_rip"
        android:padding="@dimen/dp_10"
        android:text="@string/add_str"
        android:textColor="@color/colorWhite"
        tools:ignore="RelativeOverlap"/>

</RelativeLayout>